<div class="body">
  <div class="container">
  　<% if flash[:notice] %>
    　<div class="flash">
  	  　<%= flash[:notice] %>
    　</div>
  　<% end %>
   
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>Name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if current_user == @user %>
          <%= link_to(edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench") do %>
          <% end %>
          <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with(model: @book, local: true) do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: "col-xs-12 edit-title" %>
          </div>
          <div class="field row">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class: "col-xs-12 edit-body" %>
          </div>
          <div class="actions row">
            <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag book.user, :image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book.id) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-5">
        <p>CopyRight Inratop.inc</p>
      </div>
    </div>
  </div>
</footer>