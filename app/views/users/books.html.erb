<h1>・Books page</h1>

<% if flash[:notice] %>
  <div class="flash">
  	<%= flash[:notice] %>
  </div>
<% end %>

<h1>User info</h1>

  <h3>Image</h3>
  <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg" %>

  <h3>Name</h3>
  <%= current_user.name %>

  <h3>Introduction</h3>
  <%= current_user.introduction %>

  <p>
  	<%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "pull-right" %>
  </p>

<h1>New book</h1>
<%= form_with(model: @book, local: true) do |f| %>

<% if flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h4 class="title">Title</h4>
<%= f.text_field :title %>

<h4 class="body">Opinion</h4>
<%= f.text_area :body %>

<h4 class="ind-cre"><%= f.submit 'Create Book' %></h4>

<% end %>

